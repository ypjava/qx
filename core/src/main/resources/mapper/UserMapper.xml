<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.yp.module.qx.core.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="xyz.yp.module.qx.core.domain.User">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_no" property="userNo" jdbcType="VARCHAR" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="salt" property="salt" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="BaseColumnList">
        id,user_no,user_name,password,salt,create_time,update_time
    </sql>

    <insert id="insert" parameterType="xyz.yp.module.qx.core.domain.User" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO qx_user(user_no,user_name,password,salt,create_time,update_time) VALUES (#{userNo},#{userName},#{password},#{salt},#{createTime},#{updateTime})
    </insert>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="BaseColumnList" />
        FROM qx_user
    </select>

</mapper>